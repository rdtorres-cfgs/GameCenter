<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:textColor="@color/white"
    android:background="@drawable/galaxia"
    tools:context=".Credentials.RegisterActivity">

    <TextView
        android:id="@+id/textVieTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Cambiar Datos Usuario"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/logo_color"></TextView>

    <EditText
        android:id="@+id/EditUsername"
        android:layout_marginTop="50dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/logo_color"
        android:textColorHint="@color/logo_color"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textVieTitle"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/EditPassword"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/logo_color"
        android:textColorHint="@color/logo_color"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditUsername" />

    <EditText
        android:id="@+id/EditRePassword"

        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/logo_color"
        android:textColorHint="@color/logo_color"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditPassword" />

    <Button
        android:id="@+id/save"
        android:layout_marginTop="50dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/logo_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditRePassword" />

    <ImageView
        android:id="@+id/loginImage"
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/save"
        android:src="@drawable/pinguino"></ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>